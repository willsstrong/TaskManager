<Window x:Class="Task_Manager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task_Manager"
        mc:Ignorable="d"
        Title="Task Manager" Height="911" Width="399" ResizeMode="NoResize" SizeToContent="Height">
    <Window.Resources>
        <Style x:Key="CanvasStyle1" TargetType="{x:Type Canvas}"/>
    </Window.Resources>
    <Grid>
        <!--            Time and Date Display       -->
        <TextBlock x:Name="Time" TextAlignment="Center" HorizontalAlignment="Center" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Margin="10,120,10,0" Grid.ColumnSpan="2" Height="50" Width="373" FontSize="36" RenderTransformOrigin="0.496,-0.625"/>
        <TextBlock x:Name="Date" TextAlignment="Center" HorizontalAlignment="Center" Margin="10,10,10,0" TextWrapping="Wrap" VerticalAlignment="Top" Grid.ColumnSpan="2" Height="105" Width="373" FontSize="36"><Run Text="Wednesday,"/><LineBreak/><Run Text="January 23, 1982"/></TextBlock>

        <Button x:Name="CmdNewTask" Height="30" Width="100"  Margin="145,175,148,677"
                Click="NewTask_Click" Content="New Task"/>

        <!--            Task Item List              -->
        <ListBox  x:Name="listBox" HorizontalAlignment="Right" Height="662" Margin="0,210,10,0" VerticalAlignment="Top" Width="373" ScrollViewer.VerticalScrollBarVisibility="Auto">

 
        </ListBox>

        <!--            Add New Task Screen         -->
        <Grid x:Name="NewTaskOverLay" Panel.ZIndex="1" Visibility="Hidden">
            <Grid.Background>
                <SolidColorBrush Color="Black" Opacity="0.5" />
            </Grid.Background>
            <Grid Background="White" HorizontalAlignment="Center" Height="440" Margin="25,180,28,262" VerticalAlignment="Center" Width="340" RenderTransformOrigin="0.5,0.5" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="5*"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="27*"/>
                    <RowDefinition Height="7*"/>
                </Grid.RowDefinitions>
                <Grid.Effect>
                    <DropShadowEffect/>
                </Grid.Effect>
                <Label Margin="10,12,240,10" Content="Task Name"/>
                <TextBox x:Name="TxtTaskName" Margin="130,16,10,10" >
                </TextBox>
                <Label Margin="10,12,240,10" Content="Due Date" Grid.Row="1"/>
                <DatePicker Name="NewDueDate" HorizontalAlignment="Left" Margin="130,13,0,10" Grid.Row="1" Width="200"/>
                <Label Margin="10,10,240,227" Content="Details" Grid.Row="2" RenderTransformOrigin="1.611,0.455"/>
                <TextBox Background="Wheat"  x:Name="TaskNotes" Padding="10" 
                         HorizontalAlignment="Left" Margin="10,48,0,10" Grid.Row="2" TextWrapping="Wrap" 
                         Text="Enter Details" Width="320" Cursor="IBeam" IsEnabled="True" SpellCheck.IsEnabled="True" 
                         AcceptsTab="True" AcceptsReturn="True"/>
                <Button x:Name="cmdCloseAdd" Click="CmdCloseAdd_Click"  Content="Close" 
                        HorizontalAlignment="Left" Margin="50,25,0,0" Grid.Row="3" VerticalAlignment="Top" 
                        Width="75" Height="20"/>
                <Button x:Name="cmdSaveNew" Click="CmdSaveNew_Click"  Content="Save" HorizontalAlignment="Left" 
                        Margin="210,25,0,0" Grid.Row="3" VerticalAlignment="Top" Width="75" Height="20"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
